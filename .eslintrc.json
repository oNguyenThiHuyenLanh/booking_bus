{
  "env": {
    "browser": true,
    "jquery": true
  },
  "globals": {
    "window": true
  },

  "extends": "eslint:recommended",
  "rules": {
    "no-undef": "off",

    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "parserOptions": {
    "ecmaVersion": 6
  }
}
