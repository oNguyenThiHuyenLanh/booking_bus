<% provide :title, t("admin.model_bus.title") %>
<div class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        <%= t "admin.model_bus.title" %>
      </h1>
    </div>
  </div>

  <div class="row">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col"><%= t "admin.model_bus.table.stt" %></th>
          <th scope="col"><%= t "admin.model_bus.table.id" %></th>
          <th scope="col"><%= t "admin.model_bus.table.seats" %></th>
          <th scope="col"><%= t "admin.model_bus.table.floors" %></th>
          <th scope="col"><%= t "admin.model_bus.table.rows" %></th>
          <th scope="col"><%= t "admin.model_bus.table.cols" %></th>
          <th scope="col"><%= t "admin.model_bus.table.detail" %></th>
        </tr>
      </thead>
      <tbody class="schedule-table">
        <%= render @model_buses %>
      </tbody>
    </table>
    <div class="text-center">
      <%= paginate @model_buses, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
