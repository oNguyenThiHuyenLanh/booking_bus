<% provide :title, t("admin.bus.title") %>
<div class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        <%= t "admin.bus.title" %>
        <%= link_to new_admin_bus_path,
          class: "btn btn-primary add-bus-btn" do %>
          <%= content_tag :i, t("admin.schedule.add"), class: "fa fa-plus" %>
        <% end %>
      </h1>
    </div>
  </div>

  <div class="row">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col"><%= t "admin.bus.table.stt" %></th>
          <th scope="col"><%= t "admin.bus.table.id" %></th>
          <th scope="col"><%= t "admin.bus.table.name" %></th>
          <th scope="col"><%= t "admin.bus.table.seats" %></th>
          <th scope="col"><%= t "admin.bus.table.model_id" %></th>
          <th scope="col"><%= t "admin.bus.table.detail" %></th>
        </tr>
      </thead>
      <tbody class="schedule-table">
        <%= render @buses %>
      </tbody>
      <div class="text-center">
        <%= paginate @buses, theme: "twitter-bootstrap-3" %>
      </div>
    </table>
  </div>
</div>
