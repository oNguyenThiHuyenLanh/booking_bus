<% provide :title, t("admin.schedule.title") %>
<div class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        <%= t "admin.schedule.list_schedule" %>
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="filter-part">
        <%= select_tag :id, options_for_select(list_items(@support.routes)),
          title: t("admin.schedule.filter_by_routes"), class: "selectpicker",
          multiple: true, id: "select-routes" %>

        <%= select_tag :id, options_for_select(list_items(@support.intervals)),
          title: t("admin.schedule.filter_by_interval"), class: "selectpicker",
          multiple: true, id: "select-interval" %>

        <%= link_to new_admin_schedule_path, class: "btn btn-primary add-btn" do %>
          <%= content_tag :i, t("admin.schedule.add"), class: "fa fa-plus" %>
        <% end %>
      </div>

    </div>
  </div>

  <div class="row">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col"><%= t "admin.schedule.table.stt" %></th>
          <th scope="col"><%= t "admin.schedule.table.origin" %></th>
          <th scope="col"><%= t "admin.schedule.table.destination" %></th>
          <th scope="col"><%= t "admin.schedule.table.date" %></th>
          <th scope="col"><%= t "admin.schedule.table.time_start" %></th>
          <th scope="col"><%= t "admin.schedule.table.time_during" %></th>
          <th scope="col"><%= t "admin.schedule.table.price" %></th>
          <th scope="col"><%= t "admin.schedule.table.stts" %></th>
          <th scope="col"><%= t "admin.schedule.table.action" %></th>
        </tr>
      </thead>
      <tbody class="schedule-table">
        <%= render @support.schedules %>
      </tbody>
    </table>
    <div class="text-center">
      <%= paginate @support.schedules, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
