<div class="limiter">
 	<div class="container-login100">
 		<div class="wrap-login100">
 			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "login100-form validate-form") do |f| %>
         <%= devise_error_messages! %>
 				<span class="login100-form-title p-b-70">
 					<%= t "sign_up" %>
 				</span>
 				<span class="login100-form-avatar">
 					<%= image_tag("avatar-01.jpg", alt: "AVATAR") %>
 				</span>
 
  				<div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate = "<%= t "enter_username" %>" >
 					<%= f.email_field :email, autocomplete: "email", class: "input100" %>
 					<span class="focus-input100" data-placeholder="<%= t "username" %>"></span>
 				</div>
 
  				<div class="wrap-input100 validate-input m-b-35" data-validate="<%= t "enter_password" %>">
 					<%= f.password_field :password, autocomplete: "new-password", class: "input100" %>
 					<span class="focus-input100" data-placeholder="<%= t "password" %>"></span>
 				</div>
 
          <div class="wrap-input100 validate-input m-b-35" data-validate="<%= t "enter_password" %>">
           <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input100" %>
           <span class="focus-input100" data-placeholder="<%= t "password_confirm" %>"></span>
           <br/>
         </div>
 
  				<div class="container-login100-form-btn">
 					<%= f.submit t("submit"), class: "login100-form-btn" %>
 				</div>
 
  				<%= render "devise/shared/links" %>
 			<% end %>
 		</div>
 	</div>
 </div>